#:kivy 1.10.1
#:import KivyLexer kivy.extras.highlight.KivyLexer
#:import Factory kivy.factory.Factory


<LeftLabel@Label>:
    size_hint_y: None
    height: '48dp'
    size_hint_x: 3
    color:1,1,1,0.7
    canvas.before:
        Color:
            rgba:0.39, 0.26, 0.37, 0.95
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius:[24,0,0,24]

<RoundSpinnerOption@SpinnerOption>:
    background_color:(0.42, 0.25, 0.32, 0)
    # background_down:
    #     RoundedRectangle:
    #         pos: self.pos
    #         size: self.size
    #         radius:[0,24,24,0]

<RoundSpinnerDropDown@DropDown>:
    padding:[0,3]
    canvas.before:
        Color:
            rgba:(0.27, 0.58, 1.00, 1.00)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0,24,24,24]

<RoundSpinner@Spinner>:
    size_hint_y: None
    size_hint_x: 7
    height: '48dp'
    dropdown_cls:Factory.RoundSpinnerDropDown
    option_cls: Factory.get("RoundSpinnerOption")
    canvas.before:
        Color:
            rgba:(0.42, 0.25, 0.32, 0.90)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0,24,24,0]
    background_color:0,0,0,0
    background_normal: 'atlas://data/images/defaulttheme/action_group'

<RoundedButton@Button>:
    background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    canvas.before:
        Color:
            rgba: (0.27, 0.58, 1.00, 1.00) if self.state=='normal' else (0,.7,.7,0.9)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [24,]

<BaccaratPlayerScreen>:
    BoxLayout:
        id:selector
        orientation: 'vertical'
        padding: 20
        spacing: 5
        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
                source: 'assets/bg.jpg'

        BoxLayout:
            orientation:"horizontal"
            BoxLayout:
                LeftLabel:
                    text:'选择打法'
                RoundSpinner:
                    id: player_type
                    text:'请选择打法'
                    values:('滴水式','递进式')
                    on_text:
                        root.selectPlayer(args[1])
        BoxLayout:
            orientation:"horizontal"
            BoxLayout:
                padding:[0,0,10,0]
                LeftLabel:
                    text:'起打档'
                RoundSpinner:
                    id: init_level
                    text:'请选择起打档'
                    values:('50','100')
                    on_text:
                        root.selectInitLevel(args[1])
            BoxLayout:
                LeftLabel:
                    text:'最高档'
                RoundSpinner:
                    id: init_level
                    text:'请选择最高档'
                    values:('8000','10000')
                    on_text:
                        root.selectMaxLevel(args[1])
            
        BoxLayout:
            orientation:"horizontal"
            BoxLayout:
                padding:[0,0,10,0]
                LeftLabel:
                    text:'第一次押注'
                RoundSpinner:
                    id: init_level
                    text:'请选择第一次压庄还是闲'
                    values:('庄','闲')
                    on_text:
                        root.selectFirstStake(args[1])
            BoxLayout:
                LeftLabel:
                    text:'押注方式'
                RoundSpinner:
                    id: init_level
                    text:'请选择押注的方式'
                    values:('出庄打庄，出闲打闲','出庄打闲，出闲打庄','庄闲循环','随机打')
                    on_text:
                        root.selectStakeType(args[1])
        BoxLayout:
            orientation:"horizontal"
            BoxLayout:
                padding:[0,0,10,0]
                LeftLabel:
                    text:'跳档次数'
                RoundSpinner:
                    id: init_level
                    text:'请选择净输赢几次后跳档'
                    values:('3','5')
                    on_text:
                        root.selectLiftLevelLose(args[1])
            BoxLayout:
                LeftLabel:
                    text:'最低档跳档'
                RoundSpinner:
                    id: init_level
                    text:'最低档净赢后跳档'
                    values:('100','150','200','300')
                    on_text:
                        root.selectStakeType(args[1])
        BoxLayout:
            orientation:"horizontal"
            BoxLayout:
                padding:[0,0,10,0]
                LeftLabel:
                    text:'止盈线'
                RoundSpinner:
                    id: init_level
                    text:'请选择盈利多少后停止'
                    values:('3000','5000')
                    on_text:
                        root.selectLiftLevelLose(args[1])
            BoxLayout:
                LeftLabel:
                    text:'最后一档'
                RoundSpinner:
                    id: init_level
                    text:'最后一档输了之后'
                    values:('重新开始打','停止')
                    on_text:
                        root.selectStakeType(args[1])
        BoxLayout
            RoundedButton:
                id:run
                text:"模拟"
                size_hint_y: None
                height: '48dp'
        



